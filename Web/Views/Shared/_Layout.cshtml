<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Portfolio - Ahmed Mahmoud</title>

    <!-- Custom fonts for this theme -->
    <link href="~/fonts/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
    <link href="~/css/freelancer.css" rel="stylesheet">
    <link href="~/css/Portfolio.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div id="page-top">
            <!-- Navigation -->
            <nav class="navbar navbar-expand-lg bg-danger text-uppercase fixed-top" id="mainNav">
                <div class="container">
                    <a class="navbar-brand js-scroll-trigger" href="#page-top"> Ahmed Mahmoud</a>
                    <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        Menu
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item mx-0 mx-lg-1">
                                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-controller="home" asp-action="Index" >Portfolio</a>
                            </li>   
                            <li class="nav-item mx-0 mx-lg-1">
                                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-controller="portfolioItems" asp-action="Index">Project List</a>
                            </li>
                            <li class="nav-item mx-0 mx-lg-1">
                                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div>
                @RenderBody()
            </div>

            <!-- Bootstrap core JavaScript -->
            <script src="~/js/jquery.min.js"></script>
            <script src="~/js/bootstrap.bundle.min.js"></script>

            <!-- Plugin JavaScript -->
            <script src="~js/jquery.easing.min.js"></script>

            <!-- Custom scripts for this template -->
            <script src="~/js/freelancer.min.js"></script>

        </div>
    </div>
</body>
</html>
