@model Web.ViewModels.PortfolioViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Edit</h1>

    <h4>PortfoloItem</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">image</label>
                    <img src="~/img/portfolio/@Model.ImgPath" class="img-thumbnail" width="400" alt="Alternate Text" />
                    <input asp-for="ImgPath" value="@Model.ImgPath" class="form-control" style="display:none;" />

                    <div class="form-group">
                        <label class="control-label"> Change Image </label>
                        <input type="file" name="FormFile" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Descripation" class="control-label"></label>
                    <input asp-for="Descripation" class="form-control" />
                    <span asp-validation-for="Descripation" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>

</div>
