@model Web.ViewModels.PortfolioViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding:60px; margin:100px">
    <h1>Create</h1>

    <h4>PortfoloItem</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label class="control-label"> Change Image </label>
                        <input type="file" name="FormFile" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Descripation" class="control-label"></label>
                    <input asp-for="Descripation" class="form-control" />
                    <span asp-validation-for="Descripation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>

</div>
